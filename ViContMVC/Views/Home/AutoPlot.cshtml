                t: 5,
                pad: 4
            },
            paper_bgcolor: '#7f7f7f',
            plot_bgcolor: '#c7c7c7'
        };
        var config = { responsive: true }

        Plotly.newPlot(@Html.Raw(Json.Serialize(Model.id)), data, layout, config);


    }); //

</script>
